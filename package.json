{
  "name": "noto",
  "version": "1.0.0",
  "description": "noto server api",
  "repository": {
    "type": "git",
    "url": "https://github.com/5aledmaged/noto-api.git"
  },
  "engines": {
    "node": "12.x"
  },
  "main": "src/index.js",
  "scripts": {
    "prestart": "npm run prod:db-seed",
    "start": "npm run prod:start",
    "predev:start": "npm run dev:db-seed",
    "dev:start": "nodemon --signal SIGINT --exec \"babel-node -r dotenv/config ./src/index.js\"",
    "dev:db-seed": "babel-node ./src/config/dbSeeder.js",
    "prod:start": "node dist/index.js",
    "prod:db-seed": "node dist/config/dbSeeder.js",
    "test": "NODE_ENV=test mocha tests/globalHooks.js tests/**/*.js -r @babel/register dotenv/config",
    "e2e": "NODE_ENV=test mocha e2e/global-hooks.js e2e/**/*.js -r @babel/register dotenv/config",
    "build": "NODE_ENV=production gulp build",
    "lint": "gulp lintAll"
  },
  "author": "Khaled Mashaly",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "argon2": "^0.23.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.2",
    "mongodb": "^3.5.3",
    "mongoose": "^5.9.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pino": "^5.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/register": "^7.8.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.10.0",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-plugin-import": "^2.20.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^5.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "mocha": "^6.2.2",
    "mongodb-memory-server": "^6.2.4",
    "ncp": "^2.0.0",
    "nodemon": "^1.19.4",
    "rimraf": "^2.7.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
